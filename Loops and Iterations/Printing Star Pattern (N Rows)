/*
10.1 Printing Star Pattern (N Rows) 
***** 
***** 
***** 
***** 
. 
. 
N rows
*/
#include <iostream>
using namespace std;
int main() {
    // Write C++ code here
    int nor;
    cout<<"enter number of rows: ";
    cin>>nor;
    for(int i=0;i<nor;i++){
        printf("*****\n");
    }
    return 0;
}


/*
10.4 Printing * Increasing Pattern (N Rows) 
* 
** 
*** 
**** 
. 
. 
N rows
*/
#include <iostream>
using namespace std;
int main() {
    // Write C++ code here
    int nor;
    cout<<"enter number of rows: ";
    cin>>nor;
    for(int i=1;i<=nor;i++){
        for(int j=1;j<=i;j++){
            cout<<"*";
        }
        cout<<endl;
    }
    return 0;
}
